<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="SendTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SendTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Send Tracker"
    BackgroundColor="{AppThemeBinding Light={StaticResource Action}, Dark={StaticResource ActionDark}}">

    <TabBar>
        <Tab Title="Routes" Icon="routes.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Account" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate views:AccountPage}" />
        </Tab>
    </TabBar>

</Shell>