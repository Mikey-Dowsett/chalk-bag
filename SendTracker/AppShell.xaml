<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="SendTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SendTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Send Tracker"
    BackgroundColor="{StaticResource Action}">

    <TabBar>
        <Tab Title="Routes" Icon="mountain.png">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <!-- <Tab Title="Friends" Icon="friends.png"> -->
        <!--     <ShellContent ContentTemplate="{DataTemplate views:MainPage}" /> -->
        <!-- </Tab> -->
        <Tab Title="Settings" Icon="setting.png">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>